{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "jsx": "preserve",
      "lib": ["dom", "es2015", "es2017"],
      "strict": false,
      "noEmit": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": false,
      "typeRoots": ["./src/@types", "./node_modules/@types"],

    },
    "include": ["./src/**/*", "src", "global.d.ts"],
  }